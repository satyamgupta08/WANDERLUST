<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    margin-top: 0rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 0.5em;
    opacity: 0.7;
  }
  
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  
  .filter p {
    font-size: 0.8rem;
  }
  a{
    text-decoration: none;
  color: black;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex; 
   margin-bottom: 0.5rem;
    align-items: center;
  }
@media (max-width:1300px) and ( min-width:900px) {
  .filter{
    margin-right: 1rem ;

  }
  
}
@media (max-width:1100px) and ( min-width:900px) {
  .filter{
    margin-right: 0.5rem ;

  }
  .tax-toggle{
    margin-left: 1rem;
  }
}
@media (max-width:900px) and (min-width:500px) {
  .filter{
    margin-right: 2.1rem;
  }
  .tax-toggle{
    margin-left: 3.9rem;
  }
}
@media (max-width:500px) and (min-width:300px) {
  .filter{
    margin-right: 0.4rem;
    }
    .tax-toggle{
      margin-left: 1rem;
      }
      }
</style>
